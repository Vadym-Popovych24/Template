<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppThemeWhite" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="hlm_items_menu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="lhm_items_icons">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:contentDescription">@string/none</item>
    </style>

    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="resume_detail_title_items">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget" />

    <style name="Widget.ProgressBar">
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminateDuration">3500</item>
        <item name="android:minWidth">48dip</item>
        <item name="android:maxWidth">48dip</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:maxHeight">48dip</item>
    </style>

    <style name="Widget.ProgressBar.Vertical">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_bar_vertical</item>
        <item name="android:indeterminateDrawable">
            @android:drawable/progress_indeterminate_horizontal
        </item>
        <item name="android:minWidth">1dip</item>
        <item name="android:maxWidth">12dip</item>
    </style>

    <style name="SoftSkillStyle" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="android:textColor">@android:color/white</item>
        <item name="chipBackgroundColor">@color/blue</item>
        <item name="chipCornerRadius">@dimen/xxxsmall_padding</item>
    </style>

    <style name="resume_detail_edit_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:contentDescription">@string/none</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="primary_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/standard_button_height</item>
        <item name="android:background">@drawable/circular_green_border_shape</item>
        <item name="android:layout_marginStart">@dimen/default_padding</item>
        <item name="android:layout_marginEnd">@dimen/default_padding</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="primary_сircular_progress_button" parent="primary_button">
        <item name="spinning_bar_color">@android:color/white</item>
        <item name="spinning_bar_padding">3dp</item>
        <item name="spinning_bar_width">2dp</item>
    </style>

    <style name="circular_reject_button" parent="primary_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/standard_button_height</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/circular_lite_red_border_shape</item>
        <item name="android:textColor">@color/reject_red</item>
        <item name="spinning_bar_color">@color/reject_red</item>
        <item name="spinning_bar_padding">3dp</item>
        <item name="spinning_bar_width">2dp</item>
    </style>

    <style name="fullImageDescriptionText" parent="AppTheme">
        <item name="android:textColor">@color/white</item>
        <item name="android:maxLines">5</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Theme.NoSplash" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>
