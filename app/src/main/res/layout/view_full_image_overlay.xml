<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/posterOverlayShareButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="6dp"
        android:theme="@style/Base.ThemeOverlay.AppCompat.Dark"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/posterOverlayDeleteButton"
        app:layout_constraintTop_toTopOf="@+id/posterOverlayDeleteButton"
        app:srcCompat="@drawable/ic_share"
        tools:ignore="ContentDescription"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/posterOverlayDescriptionText"
        style="@style/fullImageDescriptionText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/background_dark_transparent"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</merge>