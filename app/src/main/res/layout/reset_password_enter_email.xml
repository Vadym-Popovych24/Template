<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.android.template.ui.login.LoginActivity">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.android.template.ui.login.reset.viewmodel.PasswordResetViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="@{safeUnbox(viewModel.emailVisible) ? View.VISIBLE : View.GONE}">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingStart="@dimen/xlarge_padding"
            android:paddingEnd="@dimen/xlarge_padding"
            android:text="@string/reset_password_title"
            android:textColor="@color/green_btn"
            android:textSize="@dimen/large_text_size"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/xlarge_padding"
            android:hint="@string/email"
            android:visibility="@{safeUnbox(viewModel.emailVisible) ? View.VISIBLE : View.GONE}"
            app:boxBackgroundColor="@android:color/transparent"
            app:hintTextColor="@color/green_btn">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionDone"
                android:inputType="textEmailAddress"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:singleLine="true"
                android:text="@={viewModel.email}" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/xlarge_padding"
            android:gravity="center"
            android:lineSpacingMultiplier="1.5"
            android:paddingStart="@dimen/xlarge_padding"
            android:paddingEnd="@dimen/xlarge_padding"
            android:text="@string/reset_password_write_email_hint"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <com.github.leandroborgesferreira.loadingbutton.customViews.CircularProgressButton
            android:id="@+id/btn_confirm_email"
            style="@style/primary_Ñircular_progress_button"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/medium_padding"
            android:layout_marginBottom="@dimen/xlarge_padding"
            android:text="@string/continue_btn" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineSpacingMultiplier="1.5"
            android:paddingStart="@dimen/xlarge_padding"
            android:paddingEnd="@dimen/xlarge_padding"
            android:text="@string/reset_password_bottom_text" />
    </LinearLayout>
</layout>