<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.android.template.ui.base.BasePostViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_post_area"
        android:layout_width="match_parent"
        android:layout_height="58dp">

        <com.android.template.utils.custom.RoundedImageView
            android:id="@+id/iv_user_image"
            android:layout_width="@dimen/iv_size_post_avatar"
            android:layout_height="@dimen/iv_size_post_avatar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:loadImageUrl="@{viewModel.postCreatorAvatar}"
            tools:src="@drawable/default_avatar" />

        <ImageView
            android:id="@+id/iv_more_action"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:contentDescription="@string/none"
            android:onClick="@{() -> viewModel.clickMoreAction()}"
            android:padding="@dimen/xsmall_padding"
            android:visibility="@{safeUnbox(viewModel.isInEditMode()) ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_more_action" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/tv_margin_left_post_creator_name"
            android:layout_marginBottom="8dp"
            android:text="@{viewModel.postCreatorName}"
            app:layout_constraintBottom_toBottomOf="@+id/iv_more_action"
            app:layout_constraintStart_toEndOf="@+id/iv_user_image"
            app:layout_constraintTop_toTopOf="@+id/iv_user_image"
            tools:text="Viktor Koval" />

        <TextView
            android:id="@+id/tv_date_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{viewModel.postDate}"
            android:textColor="@color/gray_post_time"
            android:textSize="@dimen/tv_size_date_post"
            app:layout_constraintStart_toStartOf="@+id/tv_user_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_user_name"
            tools:text="TextView" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>