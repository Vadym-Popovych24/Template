<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="com.android.template.ui.profile.avatar.viewmodel.ChangeAvatarViewModel" />

        <import type="android.view.View" />
    </data>

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@android:color/white"
            android:elevation="@dimen/small_padding"
            app:title="@string/upload_avatar" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.isseiaoki.simplecropview.CropImageView
                android:id="@+id/cropImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:visibility="@{safeUnbox(!viewModel.isLoading()) ? View.VISIBLE : View.GONE}"
                app:scv_crop_mode="circle"
                app:scv_frame_color="@color/crop_grid_color"
                app:scv_frame_stroke_weight="1dp"
                app:scv_guide_color="@color/crop_grid_color"
                app:scv_guide_show_mode="show_always"
                app:scv_guide_stroke_weight="1dp"
                app:scv_handle_color="@color/crop_grid_color"
                app:scv_handle_show_mode="show_always"
                app:scv_handle_size="7dp"
                app:scv_min_frame_size="50dp"
                app:scv_overlay_color="#55F0F0F0"
                app:scv_touch_padding="8dp" />

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="@{safeUnbox(viewModel.isLoading()) ? View.VISIBLE : View.GONE}" />
        </FrameLayout>

    </LinearLayout>

</layout>